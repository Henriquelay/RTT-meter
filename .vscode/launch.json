    "version": "0.2.0",
    "configurations": [
        {
            "name": "Testa o trab com a entrada configurada",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/trab2",
            "args": [
                "${workspaceFolder}/in-exemplos/exemplo-doc.txt",
                "3",
                "out.txt"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "MIMode": "gdb",
            "externalConsole": false,
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: gcc build project",
            "miDebuggerPath": "/usr/bin/gdb",
        }
    ],
}
